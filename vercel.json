{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "templates/**",
          "static/**",
          "embeddings.npz"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    }
  ],
  "overrides": {
    "cleanUrls": true,
    "trailingSlash": false
  }
}
